<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_consumo_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Consumo Total (R$)" />

    <EditText
        android:id="@+id/et_couvert_artistico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Couvert Artístico (R$)" />

    <EditText
        android:id="@+id/et_num_pessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dividir conta por (Número de Pessoas)"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Conta Final" />

    <TextView
        android:id="@+id/tv_conta_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conta Total: R$ 0.00"
        android:textSize="18sp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/tv_valor_por_pessoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor por Pessoa: R$ 0.00"
        android:textSize="18sp" />

</LinearLayout>
